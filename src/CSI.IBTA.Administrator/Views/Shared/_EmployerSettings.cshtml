@model EmployerSettingsViewModel

<table class="table">
    <form asp-controller="Employer" asp-action="AllSettings" method="post" id="employer-settings-form">
        @Html.HiddenFor(m => m.EmployerId)
        @Html.HiddenFor(m => m.ActionName)
        <thead>
        <tr>
            <th>
                Condition
            </th>
            <th>
                State
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.EmployerSettings)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Condition)
                </td>
                <td>
                    @{
                        var firstEnabled = item.State ? "Checked" : "";
                        var secondEnabled = !item.State ? "Checked" : "";
                    }
                    <input name="@Html.DisplayFor(modelItem => item.Condition)" type="radio" value="true" @firstEnabled >
                    <input name="@Html.DisplayFor(modelItem => item.Condition)" type="radio" value="false" @secondEnabled >
                </td>
            </tr>
        }

        @if (!ViewData.ModelState.IsValid)
        {
            <tr>
                <td></td>
                <td>
                    <div asp-validation-summary="All" class="text-danger"></div>
                </td>
            </tr>
        }
        <tr>
            <td><button class="align-left custom-button" onclick="saveSettings(@Model.EmployerId)" type="button">Submit</button></td>
        </tr>
        </tbody>
    </form>
</table>