@model EmployeeViewModel

<head>
    <link rel="stylesheet" href="~/css/employees-partial-view.css">
</head>
<div class="user-information-section">
    <form asp-controller="Employees" asp-action="@Model.ActionName" method="post" id="employee-upsert-form">
        @Html.HiddenFor(m => m.EmployerId)
        @Html.HiddenFor(m => m.ActionName)
        @Html.HiddenFor(m => m.UserId)
        @Html.HiddenFor(m => m.EmployerId)

        <span class="border-label">Consumer Profile</span>
        <div class="general-container">
            <div class="general-container-inner">
                <div class="form-member">
                    <label for="Firstname">First Name:</label>
                    <input asp-for="Firstname" type="text" required defaultvalue="@Model.Firstname" />
                </div>
                <div class="form-member">
                    <label for="Lastname">Last Name:</label>
                    <input asp-for="Lastname" type="text" required defaultvalue="@Model.Lastname" />
                </div>
                <div class="form-member">
                    <label for="SSN">SSN:</label>
                    <input asp-for="SSN" type="text" required defaultvalue="@Model.SSN" oninput="setCustomValidity('')" />
                </div>
                <div class="form-member">
                    <label for="Phone">Phone:</label>
                    <input asp-for="Phone" type="text" required defaultvalue="@Model.Phone" oninput="setCustomValidity('')" />
                </div>
                <div class="form-member">
                    <label for="DateOfBirth">Date of Birth:</label>
                    <input asp-for="DateOfBirth" type="date" value="@Model.DateOfBirth.ToString("yyyy-MM-dd")" required />
                </div>
                <td class="align-left"></td>

                <div id="validate-phone" class="form-member text-danger validation-warning"></div>
            </div>
            <div class="general-container-inner">
                <div class="form-member">
                    <label for="Street">Street:</label>
                    <input asp-for="Street" type="text" required defaultvalue="@Model.Street" />
                </div>
                <div class="form-member">
                    <label for="City">City:</label>
                    <input asp-for="City" type="text" required defaultvalue="@Model.City" />
                </div>
                <div class="form-member">
                    <label for="State">State:</label>
                    <input asp-for="State" type="text" required defaultvalue="@Model.State" />
                </div>
                <div class="form-member">
                    <label for="ZipCode">Zip Code:</label>
                    <input asp-for="ZipCode" type="text" required defaultvalue="@Model.ZipCode" oninput="setCustomValidity('')" />
                </div>
                <div id="validate-zip" class="form-member text-danger"></div>
            </div>
        </div>

        <span class="border-label">Security</span>
        <div class="general-container">
            <div class="general-container-inner-second">
                <div class="form-member">
                    <label for="Username">User Name:</label>
                    <input asp-for="Username" type="text" required defaultvalue="@Model.Username" oninput="setCustomValidity('')" />
                </div>
                <div class="form-member">
                    <label for="Password">Password:</label>
                    <input asp-for="Password" type="password" required defaultvalue="@Model.Password" />
                </div>
            </div>
        </div>

        <div>
            <div id="employee-errors" class="text-danger"></div>
            <button id="submit-button" class="align-left custom-button" onclick="saveEmployeeData()" type="button">Submit</button>
            <button class="align-left custom-button secondary" onclick="showEmployees(@Model.EmployerId)" type="button">Cancel</button>
        </div>
    </form>
</div>

<div id="confirmModal" class="modal" onclick="closeModal('confirmModal')">
    <div class="modal-content" onclick="event.stopPropagation();">
        <span class="close" onclick="closeModal('confirmModal')">&times;</span>
        <p id="confirmModalText">User has been successfully created</p>
        <div class="modal-buttons">
            <button onClick="closeModal('confirmModal')" class="btn btn-outline-primary">Ok</button>
        </div>
    </div>
</div>