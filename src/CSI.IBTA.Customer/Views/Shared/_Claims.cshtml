@model FileClaimViewModel
<head>
    <link rel="stylesheet" href="~/css/file-claim.css" asp-append-version="true" />
</head>
@if(Model.Enrollments.Any())
{
    <form id="file-claim-form" enctype="multipart/form-data">
        <div class="form-group" class="file-claim-content">
            <div class="form-row">
                Plan
                <select id="plan" required>
                    @foreach(var item in Model.Enrollments)
                    {
                        <option>@item.Plan.Name (@item.PackageName)</option>
                    }
                </select>
            </div>
            <div class="form-row">
                Date of Service
                <input type="date" value="@Model.DateOfService" id="date-of-service" required />
            </div>
            <div class="form-row">
                Amount
                <input type="number" value="@Model.Amount" id="amount" required />
            </div>
            <div class="form-row">
                Receipt
                <input type="file" value="@Model.Receipt" id="receipt" required />
            </div>
        </div>
    </form>
    <div class="form-buttons">
        <div id="file-claim-errors" class="form-errors text-danger"></div>
        <button onclick="handleCancel()" class="btn btn-outline-primary">Cancel</button>
        <button onclick="saveFileClaimData()" class="btn btn-primary">Submit</button>
    </div>
}
else
{
    <p>No active enrollement</p>
}
<script src="~/Scripts/claims-page.js"></script>